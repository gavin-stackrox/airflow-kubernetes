{
    "benchmarks": [
        {
            "name": "baseline",
            "workload": "baseline-performance",
            "command": "./baseline_perf.sh"            
        },
        {
            "name": "scale",
            "workload": "scale-perf",
            "command": "./run_scale_fromgit.sh",
            "env": {
                "SCALE": "25",
                "METADATA_COLLECTION": "true",
                "WORKLOAD_NODE_ROLE": "workload",
                "OPERATOR_REPO": "https://github.com/gavin-stackrox/benchmark-operator.git",
                "OPERATOR_BRANCH": "backpack-rw-root-v0-1"
            }
        },
        {
            "name": "cluster_density",
            "workload": "kube-burner",
            "command": "./run_clusterdensity_test_fromgit.sh",
            "env": {
                "JOB_ITERATIONS": "5000",
                "JOB_TIMEOUT": "18000",
                "STEP_SIZE": "30s",
                "QPS": "20",
                "BURST": "20",
                "METRICS_PROFILE": "metrics-aggregated.yaml",
                "LOG_LEVEL": "info",
                "LOG_STREAMING": "true",
                "CLEANUP_WHEN_FINISH": "true",
                "CLEANUP": "true",
                "OPERATOR_REPO": "https://github.com/gavin-stackrox/benchmark-operator.git",
                "OPERATOR_BRANCH": "backpack-rw-root-v0-1"
            }
        },
        {
            "name": "node_density",
            "workload": "kube-burner",
            "command": "./run_nodedensity_test_fromgit.sh",
            "env": {
                "PODS_PER_NODE": "250",
                "NODE_COUNT": "25",
                "JOB_TIMEOUT": "18000",
                "QPS": "20",
                "BURST": "20",
                "STEP_SIZE": "30s",
                "METRICS_PROFILE": "metrics.yaml",
                "LOG_LEVEL": "info",
                "LOG_STREAMING": "true",
                "CLEANUP_WHEN_FINISH": "true",
                "CLEANUP": "true",
                "OPERATOR_REPO": "https://github.com/gavin-stackrox/benchmark-operator.git",
                "OPERATOR_BRANCH": "backpack-rw-root-v0-1"
            }
        },
        {
            "name": "scale_50",
            "workload": "scale-perf",
            "command": "./run_scale_fromgit.sh",
            "env": {
                "SCALE": "50",
                "METADATA_COLLECTION": "true",
                "WORKLOAD_NODE_ROLE": "workload",
                "OPERATOR_REPO": "https://github.com/gavin-stackrox/benchmark-operator.git",
                "OPERATOR_BRANCH": "backpack-rw-root-v0-1"
            }
        },
        {
            "name": "cluster_density_50",
            "workload": "kube-burner",
            "command": "./run_clusterdensity_test_fromgit.sh",
            "env": {
                "JOB_ITERATIONS": "1000",
                "JOB_TIMEOUT": "18000",
                "STEP_SIZE": "30s",
                "QPS": "20",
                "BURST": "20",
                "METRICS_PROFILE": "metrics-aggregated.yaml",
                "LOG_LEVEL": "info",
                "LOG_STREAMING": "true",
                "CLEANUP_WHEN_FINISH": "false",
                "CLEANUP": "true",
                "OPERATOR_REPO": "https://github.com/gavin-stackrox/benchmark-operator.git",
                "OPERATOR_BRANCH": "backpack-rw-root-v0-1"
            }
        },
        {
            "name": "upgrades",
            "workload": "upgrade-perf",
            "command": "./run_upgrade_fromgit.sh",
            "env": {
                "LATEST": "true",
                "CHANNEL": "nightlies",
                "TIMEOUT": "400",
                "POLL_INTERVAL": "10",
                "OPERATOR_REPO": "https://github.com/gavin-stackrox/benchmark-operator.git",
                "OPERATOR_BRANCH": "backpack-rw-root-v0-1"
            }
        }
    ]
}
